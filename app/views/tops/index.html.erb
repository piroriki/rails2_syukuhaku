<%= render "devise/shared/partial-header" %>

<div class="notifications">
 <% if flash.now[:notice] %>
  <div class="notice"><%= flash.now[:notice] %></div>
 <% end %>
</div>

<head> <!--　headタグ内に必要なCSS系リンクをおく　-->

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

<!-- bootstrapで必要なCSSを以下に記載　-->
<style>

.notifications{
 color: white;
 text-align: center;
}

.top .top-main{
 background-image:url(https://presite-potepancamp-rails-02.herokuapp.com/assets/img_cover_top.jpg);
 background-size: cover;
 width: 100%;
 height: 650px;
}

.container{
 max-width: 960px;
}

.col-lg-6{
 flex: 0 0 50%;
 max-width: 50%;
}

.search-area-title{
 color: black;
 font-size: 25px;
 font-weight: bold;
}

.top .form-flame{
 height: 650px;
 display: flex;
 align-items: center;
}

.top .form-area{
 background-color: white;
 padding: 25px;
 border-radius: 5px;
}

.area-container{
 margin: 50px;
 height: 900px;
 overflow-y: scroll;
}

.m-5{
 margin: 3rem!important;
}

*,::after,::before{
 box-sizing: border-box;
}

.top .area-container-title{
 font-size: 25px;
 margin: 35px 0;
 font-weight: bold;
 color: black;
}

.area-row{
 display: flex;
 flex-wrap: wrap;
 margin-right: -15px;
 margin-left: -15px;
 justify-content: space-between;
}

.panel-area{
 position: relative;
 width: 22%;
 height: 400px;
 overflow: scroll;

 display: flex;
 justify-content: space-between;
}

.col-lg-3{
 flex: 0 0 25%;
 max-width: 25%;
}

.col-6{
 flex: 0 0 50%;
 max-width: 50%;
}

.top span{
 position: absolute;
 bottom: 50px;
 left: 0;
 right: 0;
 color: white;
 font-weight: bold;
 Z-index: 1;
 margin: auto;
 text-align: center;
 font-size:25px 
}

.image{
 width: 100%;
 height: 400px;
 object-fit: cover;
}


</style>
</head>


<body>

 <div class="top">
  <div class="top-main">
   
   
   <div class="container"> <!--　検索エリア分 -->

<!-- 背景画像の中に検索エリアを用意する -->

    <div class="row col-lg-6">
     <div class="form-flame">
      <div class="form-area">
       <p class="search-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
       
<!--　エリア検索用フォームを表示する(address_contで住所を使用したあいまい検索ができる)　-->
 　     <%= search_form_for @q, url: search_rooms_path do |f| %>
         <%= f.label :address_cont,"エリア" %>
         <%= f.search_field :address_cont, placeholder: "東京", class:"form-control" %>
         <%= f.submit "探す", class: "btn btn-primary" %>
 　     <% end %>
      </div>
     </div>
    </div>
   </div>


   <div class="container"> <!--　画像リンクによる検索エリア分　-->

<!--　各エリアの画像を貼り付け、画像リンク&地名を表示させる　-->
    <div class="area-container m-5">
     <p class="area-container-title">おすすめのエリア</p>
      <div class="area-row">
      
       <div class="panel-area col-lg-3 col-6">
        <span>東京</span>
        <%= link_to image_tag( 'https://presite-potepancamp-rails-02.herokuapp.com/assets/img_tokyo.jpg', class: "image", alt: "東京" ), search_rooms_path(q:{address_cont:"東京"}) %>
       </div>
       
       <div class="panel-area col-lg-3 col-6">
        <span>大阪</span>
        <%= link_to image_tag( 'https://presite-potepancamp-rails-02.herokuapp.com/assets/img_osaka.jpg', class: "image", alt: "大阪"), search_rooms_path(q:{address_cont:"大阪"}) %>
       </div>
       
       <div class="panel-area col-lg-3 col-6">
        <span>京都</span>
        <%= link_to image_tag( 'https://presite-potepancamp-rails-02.herokuapp.com/assets/img_kyoto.jpg', class: "image", alt: "京都"), search_rooms_path(q:{address_cont:"京都"}) %>
       </div>
       
       <div class="panel-area col-lg-3 col-6">
        <span>札幌</span>
        <%= link_to link_to image_tag( 'https://presite-potepancamp-rails-02.herokuapp.com/assets/img_sapporo.jpg', class: "image", alt: "札幌" ), search_rooms_path(q:{address_cont:"札幌"}) %>
       </div>
      </div>

     </div>
    </div>
   </div>
  </div>
 </div>


<%= render "devise/shared/partial-footer" %>


