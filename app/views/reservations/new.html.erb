<body>

<%= form_with model:@reservation, url:new_room_reservation_path(@room), local:true do |r|%> 
<table class="table table-striped table-bordered">
 <div class="mt-4 ml-3 mb-4">
  <p class="font-weight-bold">予約内容確認</p>
 </div>

 <tr>
  <h3>¥<%= @room.price %>/日</h3>
 </tr>
 
 <tr>
  <th>開始日</th>
  <td><%= @reservation.started_day.to_s(:reservetime_jp) %></td>
 </tr>
 
 <tr>
  <th>終了日</th>
  <td><%= @reservation.finished_day.to_s(:reservetime_jp) %></td>
 </tr>
 
 <tr>
  <th>使用日数</th>
  <td><%= @reservation.sum_of_days %>日</td>
 </tr>
 
 <tr>
  <th>人数</th>
  <td><%= @reservation.people.to_i %>人</td>
 </tr>
 
 <tr>
  <th>合計金額</th>
  <td><%= @reservation.price %>円</td>
 </tr>
 <p class="reservation_message">上記内容でよろしければ、「予約を確定」を押してください</p>

 <tr>
   <%= r.hidden_field :member_id, value: current_member.id %>
   <%= r.hidden_field :room_id, value:@reservation.room.id %>
   <%= r.hidden_field :people, value:@reservation.people %>
   <%= r.hidden_field :started_day %>
   <%= r.hidden_field :finished_day %>
   <td>
    <%= r.submit "予約を確定する", class:"btn btn-primary form-control" %>
   </td>
  </tr>
    <%= link_to "ルーム詳細に戻る",room_path(@room) %>
 <tr>
</table>
<% end %>


<%= render "devise/shared/partial-footer" %>


