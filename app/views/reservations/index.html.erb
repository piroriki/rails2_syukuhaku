<head>
<%= render "devise/shared/partial-header" %>

 <div class="notifications">
  <% if flash.now[:notice] %>
   <div class="notice"><%= flash.now[:notice] %></div>
  <% end %>
 </div>

<!-- bootstrapで必要なCSSを以下に記載　-->
 <style>
  body{
   font-family: verdana, arial, helvetica, sans-serif;
   font-size: 13px;
   line-height: 18px;
  }

  .reservations{
   max-width: 100%;
   padding: 30px 0;
   margin-bottom: 100px;
  }

  .pb-4{
   padding-bottom: 1.5rem;
   font-size: 25px;
   color: black;
  }

  table{
   min-width: 800px;
   border-collapse: collapse;
  }

  .reservations table thead tr{
   border-top: 1px solid gray;
   border-bottom: 1px solid gray;
   text-align: center;
   vertical-align: middle;
  }

  th{
   text-align: inherit;
   padding: 10px 15px;
   font-size: 14px;
   latter-spacing: 1px;
  }

  td{
   padding: 10px;
  }

  .posts-image{
   width: 250px;
   height: 150px;
   object-fit: cover;
   vertical-align: middle;
   border-style: none;
  }

  .reserve-name{
   font-weight: bold;
   font-size: 18px;
  }

  .posts-introduction{
   max-width: 400px;
  }

 </style>
</head>


<body>
 <div class="container reservations">
  <p class="pb-4">予約済みルーム一覧</p>

  <table class="table table-striped table-bordered">
  <% @reservations.each do |rv| %>
   <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>合計料金</th>
　　　 <th>開始日</th>
      <th>終了日</th>
      <th>予約確定日時</th>
    </tr>
   </thead>

   <tbody>
    <tr>
     <td>
      <%= image_tag rv.room.image.url, class: "posts-image" %>
     </td>
     <td class="reserve-name"><%= rv.room.name %></td>
     <td class="post-introsuction"><%= rv.room.introduction %></td>
     <td><%= rv.price %></td>
     <td><%= rv.started_day.to_s(:reservetime_jp) %></td>
     <td><%= rv.finished_day.to_s(:reservetime_jp) %></td>
     <td><%= rv.updated_at.to_s(:datetime_jp) %></td>
    </tr>
   </tbody>

  <% end %>
  </table>
 </div>

<%= render "devise/shared/partial-footer" %>


