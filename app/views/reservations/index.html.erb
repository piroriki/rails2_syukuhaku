<body>
<%= render partial: "members/shared/partial-header" %>


<h3>予約済みルーム一覧</h3>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>合計料金</th>
　　　 <th>開始日</th>
      <th>終了日</th>
      <th>予約確定日時</th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |rv| %>
      <tr>
        <td>
         <%= image_tag rv.room.image.url, class: "posts-image", size: "300×200" %>
        </td>
        <td><%= rv.room.name %></td>
        <td><%= rv.room.introduction %></td>
        <td><%= rv.price %></td>
        <td><%= rv.started_day.to_s(:reservetime_jp) %></td>
        <td><%= rv.finished_day.to_s(:reservetime_jp) %></td>
        <td><%= rv.updated_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= render partial: "members/shared/partial-footer" %>


