<head>
 <%= render "devise/shared/partial-header" %>
 <div class="notifications">
  <% if flash.now[:notice] %>
   <div class="notice"><%= flash.now[:notice] %></div>
  <% end %>
 </div>

<!-- bootstrapで必要なCSSを以下に記載　-->
 <style>
  body{
   font-family: verdana, arial, helvetica, sans-serif;
   font-size: 13px;
   line-height: 18px;
  }

  .room-posts{
    max-width: 100vw;
    padding: 50px 60px;
    margin-bottom: 100px;
  }

  .pb-4{
    padding-bottom: 1.5rem;
    color: black;
    font-size: 25px;
  }
 
  .table{
   border-collapse: collapse;
  }
 </style>
</head>


<body>

<div class="room-posts container">
 <div class="pb-4">登録済みルーム一覧</div>

 <table class="table table-striped table-bordered">
  <thead>
   <tr>
    <th>ルーム画像</th>
    <th>ルーム名</th>
    <th>ルーム紹介</th>
    <th>料金</th>
    <th>作成日</th>
   </tr>
  </thead>

  <tbody>
   <% @rooms.each do |room| %>
    <tr>
     <td><%= image_tag room.image.url, class: "posts-image", size: "300×200" %></td>
     <td><%= link_to"#{room.name}", room_path(room.id) %></td>
     <td><%= room.introduction %></td>
     <td class="price-mark"><%= room.price %></td>
     <td><%= room.created_at.to_s(:datetime_jp) %></td>
    </tr>
   <% end %>
  </tbody>
 
 </table>
</div>

<%= render "devise/shared/partial-footer" %>


