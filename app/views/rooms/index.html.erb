<body>
<%= render partial: "members/shared/partial-header" %>

<div class="mt-4 ml-3 mb-4">
<p class="font-weight-bold">登録済みルーム一覧</p>
</div>

<table class="table table-striped table-bordered">
 <thead>
  <tr>
   <th>ルーム画像</th>
   <th>ルーム名</th>
   <th>ルーム紹介</th>
   <th>料金</th>
   <th>作成日</th>
  </tr>
 </thead>

 <tbody>
  <% @rooms.each do |room| %>
   <tr>
    <td><%= image_tag room.image.url, class: "posts-image", size: "300×200" %></td>
    <td><%= link_to"#{room.name}", room_path(room.id) %></td>
    <td><%= room.introduction %></td>
    <td class="price-mark"><%= room.price %></td>
    <td><%= room.created_at.to_s(:datetime_jp) %></td>
   </tr>
  <% end %>
 </tbody>
</table>


<%= render partial: "members/shared/partial-footer" %>


