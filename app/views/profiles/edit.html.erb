<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @member, url: profile_path, local: true do |f| %>
        <%= render "members/shared/partial-messages", object: f.object %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control mb-3" %>
          </div>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control mb-3" %>
          </div>
          <div class="form-group">
            <%= f.label :avatar %>
            <% if @member.avatar.present?%>
             <%= f.file_field :avatar, class: "form-control", accept: 'image/*', onchange: 'previewImage(preview)' %>
            <% else %>
            <%= image_tag "default-icon.jpg"%>
            <% end %>
            <%= f.hidden_field :avatar_cache %>
            <div class='mt-3 mb-3'>
              <%= image_tag @member.avatar.url, id: 'preview', size: '100x100', class: 'rounded-circle' %>
            </div>
          </div>
          <%= f.submit  class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>