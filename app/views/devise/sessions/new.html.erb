<%= render partial: "devise/shared/partial-header" %>

<div class="user-field">
<h4>ログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <th><%= f.label :email,"メールアドレス" %></th><br />
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td><br />

    <th><%= f.label :password,"パスワード" %></th><br />
    <td><%= f.password_field :password, autocomplete: "current-password" %></td><br />

  <% if devise_mapping.rememberable? %>
      <td><%= f.check_box :remember_me %></td>
      <th><%= f.label :remember_me,"パスワードを記憶する" %></th><br />
  <% end %>

    <%= f.submit "ログインする" %>
<% end %>
<%= render "devise/shared/links" %>
</div>

<%= render partial: "devise/shared/partial-footer" %>