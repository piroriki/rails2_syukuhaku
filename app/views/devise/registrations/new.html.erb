<p class="sign_up_title">新しいアカウントを作成</p>

<%= form_with model: @member,url: member_registration_path, local: true do |f| %>

<!-- 新規登録画面の入力内容を実装する -->

<table class="table table-borderd">
<div class="new_member_field">
 　 <div id="required">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザー名" %><br />
    </div>
    
    <div id="required">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %><br />
    </div>

    <div id="required">
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %><br />
    </div>

    <div id="required">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード(確認用)" %><br />
    </div>

    <%= f.hidden_field :member_id, value: @member.id %>
    
    <div class="actions">
    <%= f.submit "新規登録" %>
    </div>
    <% end %>
</div>
</table>


<%= render "devise/shared/partial-footer" %>


