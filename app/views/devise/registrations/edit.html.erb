<style>
</style>
</head>


<div class="member-edit-form">
<p class="member-edit-title">アカウント編集</p>

<%= form_with model: @member, url: edit_member_registration_path, local: true do |f| %>

<!--　アカウント編集画面を設定する　-->

    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br />

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <%= f.label :password, "変更後パスワード（変更する場合のみ入力）" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %><br />

    <%= f.label :password_confirmation, "パスワード確認用（変更する場合のみ入力）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br />

    <%= f.label :current_password, "現在のパスワード" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>

  <div class="actions">
    <%= f.submit "更新" %><br />
    <%= link_to "戻る", :back %>
  </div>
<% end %>
</div>


<%= render "devise/shared/partial-footer" %>


