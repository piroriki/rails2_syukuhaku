<!-- アカウント画面を表示させる -->

<div class="account-container">

<!--　画面左横のアカウント、プロフィールリンクを設置する-->
 <div class="profile-link">
  <%= link_to "アカウント",member_path(@member.id) %>
  <%= link_to "プロフィール",edit_member_path(@member.id) %>
 </div>

 <div class="account-content">
  <table class="table">
    <p class="account-title">アカウント</p>

     <tr>
      <th>メールアドレス</th>
      <td><%= @member.email %></td>
     </tr>

     <tr>
      <th>パスワード</th>
      <td>******</td>
     </tr>
     
     <tr>
      <%= link_to "編集", edit_member_registration_path, class:'btn btn-primary form-control' %>
     </tr>
    
  </table>
 </div>
</div>


