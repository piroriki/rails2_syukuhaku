<%= render "members/shared/partial-header" %>

<div class="user-confirm-form">
<p class="user-confirm-title">アカウント確認</p>

<%= form_with model :@member,url :registration_path(resource_name),local :true do |f| %>
  <%= render "members/shared/error_messages", resource: resource %>

<!--　アカウント確認画面を設定する　-->

    <%= f.label :メールアドレス %>
    <%= f.email_field :email, value :@member.email, readonly :true %><br />

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <%= f.label :パスワード %><br />
    <%= f.password_field :current_password, value :@member.password, readonly :true %>

  <div class="actions">
    <%= link_to "編集",edit-member-registration_path %>
  </div>
<% end %>
</div>

<%= render "members/shared/partial-footer" %>
