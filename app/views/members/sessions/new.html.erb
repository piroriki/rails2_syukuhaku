<%= render "members/shared/partial-header"%>

<p class="sign_in_title">ログイン</p>

<%= form_with model :@member, url :session_path(resource_name),local :true do |f| %>
<div class="sign_in_field">
    <div id="requiered">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %><br />
    </div>

    <div id="requiered">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %><br />
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :パスワードを記憶する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
</div>

<%= render "members/shared/partial-footer"%>