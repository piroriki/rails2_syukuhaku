<body>

<!-- プロフィール画面を表示させる -->

<div class="profile-container">

<!--　画面左横のアカウント、プロフィールリンクを設置する-->
 <div class="profile-link">
  <%= link_to "アカウント",member_path(@member.id) %>
  <%= link_to "プロフィール",edit_member_path(@member.id) %>
 </div>

 <div class="profile-content">
  <table class="table">
   <%= form_with model:@member do |p|%>
    <p class="profile-title">プロフィール</p>

    <tr>
     <td>
      <% if @member.avatar? %>
       <%= image_tag @member.avatar.url,　alt:"アイコン画像", size:"100×100",class:"nav-icon" %>
      <% else %>
       <%= image_tag '/assets/images/default-icon.jpg', alt:"アイコン画像", size:"100×100",class:"nav-icon" %>
      <% end %>
     </td>
    </tr>

    <tr>
     <th><%= p.label :avatar, "アイコン画像" %></th>
     <td><%= p.file_field :avatar, accept: 'image/*' %></td>
    </tr>
 
    <tr>
     <th><%= p.label :name, "名前" %></th>
     <td><%= p.text_field :name, :placeholder => "名前を入力", required: true %></td>
    </tr>

    <tr>
     <th><%= p.label :introduction, "自己紹介文" %></th>
     <td><%= p.text_area :introduction, :placeholder => "自己紹介を入力" %></td>
    </tr>
    
    <tr>
     <%= p.submit "更新する", class:'btn btn-primary form-control'%>
    </tr>
   <% end %>
  </table>
 </div>
</div>


<%= render "devise/shared/partial-footer" %>


